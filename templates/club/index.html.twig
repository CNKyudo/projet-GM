{% extends 'base.html.twig' %}

{% block title %}Clubs{% endblock %}

{% block body %}
    <h1>Liste des clubs</h1>

    <a class="btn btn-success mb-3" href="{{ path('club_new') }}">Créer un club</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Président</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.id }}</td>
                <td>{{ club.name }}</td>
                <td>{{ club.president ? club.president : '-' }}</td>
                <td>{{ club.email ?: '-' }}</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('club_show', {'id': club.id}) }}">Voir</a>
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('club_edit', {'id': club.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Aucun club trouvé</td></tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-3">
        {{ knp_pagination_render(clubs) }}
    </div>
{% endblock %}