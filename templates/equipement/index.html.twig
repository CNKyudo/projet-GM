{% extends 'base.html.twig' %}

{% block title %}Hello EquipementController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Équipements</h1>

    <table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Club Propriétaire</th>
            <th>Club Emprunteur</th>
        </tr>
    </thead>
    <tbody>
        {% for equipement in equipements %}
            <tr>
                <td>{{ equipement.id }}</td>
                <td>{{ equipement.typeName }}</td>
                <td>
                {% if equipement.ownerClub %}
                   {{ equipement.ownerClub.name }}
                {% endif %}
                </td>
                <td>
                {% if equipement.borrowerClub %}
                   {{ equipement.borrowerClub.name }}
                {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
