{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisation de votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Renseignez l'adresse email associée à votre compte et nous vous enverrons un lien vous permettant de réinitialiser de mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le lien de réinitialisation</button>
    {{ form_end(requestForm) }}
{% endblock %}
